[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .tox,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    htmlcov

# Per-file ignores
per-file-ignores =
    # Imported but unused in __init__.py files is fine
    __init__.py:F401
    # Tests can have long lines for test data
    tests/*:E501
